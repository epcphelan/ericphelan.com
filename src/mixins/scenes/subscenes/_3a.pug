            .shell
                .center-logos
                    .line
                    .container
                        .logo
                            img(src="assets/img/logos/glam_and_go.png")
                        .logo
                            img(src="assets/img/logos/principly_white.png")
                        .logo
                            img(src="assets/img/logos/gathered_white.png")
                        .logo
                            img(src="assets/img/logos/springshot.png")
                        .logo
                            img(arc="assets/img/logos/ipplicant.png")
